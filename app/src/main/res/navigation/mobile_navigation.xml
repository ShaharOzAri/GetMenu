<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.getmenu.ui.home.HomeFragment"
        android:label="Feed"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_addPostFragment"
            app:destination="@id/addPostFragment" />
        <action
            android:id="@+id/action_nav_home_to_showPostFragment"
            app:destination="@id/showPostFragment">
            <argument
                android:name="PostId"
                android:defaultValue="0" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/nav_posts"
        android:name="com.example.getmenu.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_account"
        android:name="com.example.getmenu.ui.MyAccount.MyAccountFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.getmenu.AddPostFragment"
        android:label="Add Post"
        tools:layout="@layout/fragment_add_post" />
    <fragment
        android:id="@+id/showPostFragment"
        android:name="com.example.getmenu.ShowPostFragment"
        android:label="Post "
        tools:layout="@layout/fragment_show_post">
        <argument
            android:name="postID"
            app:argType="string" />
    </fragment><action android:id="@+id/action_global_addPostFragment" app:destination="@id/addPostFragment"/>
</navigation>